[flake8]
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    dist,
    build,
    *.egg-info,
    logs,
    notebooks

max-line-length = 100

# Black-compatible ignores
extend-ignore = E203, W503

# Temporary baseline to reduce noise; tighten later per module.
ignore =
    E302
    E305
    E306
    E501
    E701
    W391
    W291
    E221
    E231
